{
    "name": "savethebite",
    "version": "0.0.1",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "generate-migrations:db": "drizzle-kit generate --config=src/lib/server/db/drizzle.config.ts",
        "push:db": "drizzle-kit push --config=src/lib/server/db/drizzle.config.ts",
        "migrate:db": "npx tsx src/lib/server/db/migrate.ts"
    },
    "devDependencies": {
        "@fontsource/fira-mono": "^5.1.0",
        "@neoconfetti/svelte": "^2.2.1",
        "@sveltejs/adapter-auto": "^3.3.1",
        "@sveltejs/kit": "^2.8.5",
        "@sveltejs/vite-plugin-svelte": "^4.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/better-sqlite3": "^7.6.12",
        "@types/eslint": "^9.6.1",
        "autoprefixer": "^10.4.20",
        "drizzle-kit": "^0.28.1",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.46.0",
        "globals": "^15.12.0",
        "postcss": "^8.4.49",
        "prettier": "^3.4.1",
        "prettier-plugin-svelte": "^3.3.2",
        "svelte": "^5.2.10",
        "svelte-check": "^4.1.0",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.16.0",
        "vite": "^5.4.11"
    },
    "type": "module",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.7.1",
        "@libsql/client": "^0.14.0",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "better-sqlite3": "^11.6.0",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.36.4",
        "svelte-hot-french-toast": "^1.0.0"
    }
}
